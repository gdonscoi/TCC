<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context=".InformacoesActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="62dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:background="#32849a"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginTop="8dp"
            android:text="@string/informacoes"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="35sp" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="#000000"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView3"
						style="@style/InfoAlignStyle"
                        android:text="@string/nome_instituicao"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView2"
                        android:gravity="center"
                        android:text="@string/nossa_missao_fho"
                        style="@style/InfoNamesStyle" />
                </LinearLayout>

                <Button
                    android:id="@+id/button1"
                	style="@style/InfoAlignStyle"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/botao_localizacao"
                    android:onClick="onClickLocalizacao" />

                <Button
                    android:id="@+id/Button02"
               		style="@style/InfoAlignStyle"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/botao_historia_uniararas"
                    android:onClick="onClickHistoria" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:background="#000000"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView01"
             			style="@style/InfoAlignStyle"
                        android:text="@string/desenvolvedores"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ffffff" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/TextView02"
                      	style="@style/InfoNamesStyle"
                        android:text="@string/desenvolvedor_um"/>

                    <TextView
                        android:id="@+id/TextView03"
                   		style="@style/InfoNamesStyle"
                        android:text="@string/desenvolvedor_um_email"/>

                    <TextView
                        android:id="@+id/textView4"
                       	style="@style/InfoNamesStyle"
                        android:layout_marginTop="5dp"
                        android:text="@string/desenvolvedor_dois"/>

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_marginTop="0dp"
                        style="@style/InfoNamesStyle"
                        android:text="@string/desenvolvedor_dois_email"/>

                    <Button
                        android:id="@+id/Button03"
						style="@style/InfoAlignStyle"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/botao_sobre"
                        android:onClick="onClickSobre" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
